<% if @registrations.blank? %>
<p>No registered aircraft in database</p>
<% else %>
<p>Registered aircrafts:</p>

<ul id = "registrations">
   <% @registrations.each do |c| %>
   <li>
   <%= link_to c.model, {:action => 'show', :id => c.id} -%>
    <b> <%= link_to "Delete", {:action => 'delete', :id => c.id},
      :confirm => "Are you sure you want to delete this item?" %></b>
   </li>
   <% end %>
</ul>

<% end %>
<p><%= link_to "Register an Aircraft", {:action => 'new' }%></p>